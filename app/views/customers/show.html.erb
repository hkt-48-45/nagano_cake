<h2>会員情報</h2>

<table class='table'>
  <tr>
	  <th>名前</th>
	  <th><%= @customer.last_name %><%= @customer.first_name %></th>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <th><%= @customer.email %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th><%= @customer.post_number %></th>
  </tr>
  <tr>
	  <th>住所</th>
	  <th><%= @customer.address %></th>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <th><%= @customer.telephone_number %></th>
  </tr>

</table>
  <%= link_to "編集する", edit_customer_path(@customer),class: "btn btn-outline-secondary btn-block" %>
  <!--注文履歴一覧リンク-->
  <%= link_to "-配送先一覧", customer_addresses_path(@customer),class: "btn btn-outline-secondary btn-block" %>