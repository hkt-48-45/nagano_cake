<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員情報</h2>
    <%= form_with model:@customer,url:  customer_path, local:true do |f| %>
      <%#= render "public/shared/error_messages", resource: resource %>
      <%#= render 'layouts/errors', obj: @customer %>

      <!--新規登録と共通部分あり-->
      <div class="field">
        <%= f.label :"（姓）" %><br>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :"（名）" %><br>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :"（セイ）" %><br>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>

      <div class="field">
      <%= f.label :"（メイ）" %><br>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
      <%= f.label :"郵便番号（ハイフンなし）" %><br>
      <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
      </div>

      <div class="field">
      <%= f.label :"住所" %><br>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
      <%= f.label :"電話番号（ハイフンなし）" %><br>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>


      <div class="form-group">
        <%= f.submit "編集内容を保存する", class: 'btn btn-secondary' %>
      </div>

      <div class="field">
        <%= link_to "退会する", withdraw_confirm_path %>
      </div>

      <div class="field">
        <%= link_to "戻る", customer_path(current_customer) %>
      </div>

    <% end %>
    </div>
  </div>
</div>
