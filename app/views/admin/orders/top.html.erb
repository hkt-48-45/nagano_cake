
<div class="container my-5">
  <div class="row mt-3">
    <h2 class="head-line title_h2 text-center">注文履歴一覧</h2>
  </div>
  <div class="row mt-3">
  	<div class="offset-sm-1 col-sm-10">
  		<table class="table table-hover">
  		  <thead>
  		    <tr class="info">
  		      <th class="col-xs-3"><i class="far fa-clock"></i>購入日</th>
  	      	  <th><i class="far fa-user"></i>購入者</th>
  		      
  		      <th class="col-xs-2">注文ステータス</th>
  		    </tr>
  		  </thead>

  		  <tbody>
  		    <% @orders.each do |order| %>
  		      <tr>
  		        <td>
  		          <%= link_to admin_order_path(order) do %>
  		          	<%= order.created_at.strftime('%Y/%m/%d') %>
  		          <% end %>
  		        </td>
  		        <td class="text-left">
  		          <%= order.customer.last_name %><%= order.customer.first_name %>
  		        </td>
  		       
      	        <td>
      	      	  <%= order.status_i18n %>
       	        </td>
       	      </tr>
  		    <% end %>
  		  </tbody>
  		</table>
  	</div>
  </div>
</div> 
    <div class="container">
      <div class="row">
      <div class="col-md-4 offset-md-4 py-2 mt-5">
      <%= paginate(@orders) %>
      </div>
    </div>
  </div> 