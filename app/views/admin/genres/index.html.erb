<div class="container my-5">
  <div class="row">
<h4>ジャンル一覧・追加</h4>
  </div>

<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>

  <%= f.label :ジャンル名 %>
  <%= f.text_field :name %>

  <%= f.submit "新規登録" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
      </tr>
    <% end %>
  </tbody>
</table>