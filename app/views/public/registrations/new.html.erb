<div class="container my-5">
  <div class="row">
    <h2>新規登録</h2>
  </div>
<div class="row mt-3 flex-column align-items-center">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
  <%= f.label :氏名, class: "col-sm-4" %><br>
  <%= f.text_field :last_name, class: "col-sm-4" %>
  <%= f.text_field :first_name, class: "col-sm-4" %>
  </div>

  <div class="form-group row">
  <%= f.label :フリガナ, class: "col-sm-4" %><br>
  <%= f.text_field :last_name_kana, class: "col-sm-4" %>
  <%= f.text_field :first_name_kana, class: "col-sm-4" %>
  </div>


  

  <div class="form-group row">
    <%= f.label :"メールアドレス", class: "col-sm-6" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6" %>
  </div>


  <div class="form-group row">
  <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-6" %><br>
  <%= f.text_field :post_number, class: "col-sm-6" %>
  </div>

  <div class="form-group row">
  <%= f.label :"住所", class: "col-sm-6" %><br>
  <%= f.text_field :address, class: "col-sm-6" %>
  </div>

  <div class="form-group row">
  <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-6" %><br>
  <%= f.text_field :telephone_number, class: "col-sm-6" %>
  </div>


  <div class="form-group row">
    <%= f.label :"パスワード（６文字以上）", class: "col-sm-6" %>
    <% if @minimum_password_length %>
    <em><% @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-6" %>
  </div>



  <div class="form-group row">
    <%= f.label :"パスワード（確認用）", class: "col-sm-6" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-6" %>
  </div>

  <div class="row">
    <%= f.submit "Sign up", class: "mt-3 mx-auto" %>
  </div>
<% end %>


<%= render "public/shared/links" %>
</div>
